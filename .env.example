# Oulipo Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# Dashboard authentication (single shared password)
DASHBOARD_PASSWORD=

# Anthropic Claude API
ANTHROPIC_API_KEY=

# OpenAI API (for GPT models in content publisher)
OPENAI_API_KEY=

# Google OAuth credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Local oulipo repo path (for events.json and HTML files)
OULIPO_REPO_PATH=/Users/halim/Documents/oulipo

# Supabase (Upcoming events, Postable tasks)
# Project: becoming-borders. Get from Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
# Table for events (default: oulipo-events). Use "events" if your table has that name.
SUPABASE_EVENTS_TABLE=oulipo-events
